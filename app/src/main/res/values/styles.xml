<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
       <item name="android:textAppearance">@style/AppTheme.BodyAppearance</item>
        <item name="android:typeface">serif</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Subheading" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="AppTheme.Heading" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.BodyAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
